<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:component-scan base-package="com.interzonedev.herokuspringdemo.functionaltest" />

	<import resource="classpath:com/interzonedev/herokuspringdemo/spring/dataSourceContext.xml" />

	<bean id="dbUri" class="java.net.URI">
		<constructor-arg
			value="postgres://herokuspringdemouser:herokuspringdemopass@localhost/herokuspringdemo_test" />
	</bean>

	<bean id="dbUnitDataSetTester" class="com.interzonedev.zankou.dataset.dbunit.DbUnitDataSetTester" />

	<bean id="functionalTestProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
		<property name="location"
			value="classpath:com/interzonedev/herokuspringdemo/properties/functional.test.properties" />
	</bean>

	<bean id="firefoxDriver" class="org.openqa.selenium.firefox.FirefoxDriver" lazy-init="true"
		destroy-method="close" />

	<bean id="htmlUnitDriver" class="org.openqa.selenium.htmlunit.HtmlUnitDriver" lazy-init="true"
		destroy-method="close" />

	<bean id="safariDriver" class="org.openqa.selenium.safari.SafariDriver" lazy-init="true"
		destroy-method="close" />

	<bean id="chromeDriver" class="org.openqa.selenium.chrome.ChromeDriver" lazy-init="true"
		destroy-method="close" />

	<bean id="internetExplorerDriver" class="org.openqa.selenium.ie.InternetExplorerDriver"
		lazy-init="true" destroy-method="close" />

</beans>
