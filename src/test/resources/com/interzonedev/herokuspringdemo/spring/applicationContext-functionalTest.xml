<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!--<context:component-scan base-package="com.interzonedev.herokuspringdemo" /> -->

	<import resource="classpath:com/interzonedev/herokuspringdemo/spring/dataSourceContext.xml" />

	<bean id="dbUri" class="java.net.URI">
		<constructor-arg
			value="postgres://herokuspringdemouser:herokuspringdemopass@localhost/herokuspringdemo_test" />
	</bean>

	<bean id="dbUnitDataSetTester" class="com.interzonedev.sprintfix.dataset.dbunit.DbUnitDataSetTester" />

	<bean id="functionalTestProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
		<property name="location"
			value="classpath:com/interzonedev/herokuspringdemo/properties/functional.test.properties" />
	</bean>

	<bean id="firefoxDriver" class="org.openqa.selenium.firefox.FirefoxDriver" destroy-method="close" />

	<bean id="functionalTestHelper" class="com.interzonedev.herokuspringdemo.FunctionalTestHelper" />
</beans>
